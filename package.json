{
  "name": "stewed",
  "description": "Stewed UI components in React.",
  "private": false,
  "scripts": {
    "prepare": "husky install",
    "build": "bun run --filter '*' build",
    "watch": "bun run --filter @stewed/hooks watch",
    "lint": "bun run --filter './packages/*' lint",
    "lint:style": "stylelint '**/*.scss'",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "test:unit": "bun run --filter '*' test:unit",
    "clean": "bun run --filter '*' clean && rm -rf node_modules",
    "storybook": "storybook dev -p 6006",
    "storybook:build": "storybook build",
    "publish-dry": "bun run --filter '*' publish --no-git-checks --dry-run",
    "changelog:conventional": "changeset-conventional",
    "changelog:package": "changeset",
    "changelog:generate": "bun run changelog:conventional & bun run packages:version",
    "packages:status": "changeset status --verbose",
    "packages:publish": "changeset publish",
    "packages:version": "changeset version"
  },
  "dependencies": {
    "@hello-week/hooks": "^0.4.0",
    "@stewed/hooks": "workspace:*",
    "@stewed/react": "workspace:*",
    "@stewed/tokens": "workspace:*",
    "@stewed/utilities": "workspace:*",
    "@tanstack/react-query": "^5.64.1",
    "babel-plugin-react-compiler": "1.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.15",
    "@changesets/cli": "^2.27.11",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@harmonix-hub/stylelint": "^1.5.0",
    "@harmonix-hub/tsconfig": "^1.6.0",
    "@storybook/addon-docs": "^10.2.9",
    "@storybook/builder-vite": "^10.2.9",
    "@storybook/react": "^10.2.9",
    "@storybook/react-vite": "^10.2.9",
    "@testing-library/react": "^16.2.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/node": "^25.2.3",
    "@types/react": "^19.2.14",
    "changeset-conventional-commits": "^0.2.5",
    "husky": "^9.1.7",
    "prop-types": "^15.8.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-icons": "^5.4.0",
    "storybook": "^10.2.9",
    "stylelint": "^17.3.0",
    "stylelint-config-recess-order": "^7.6.1",
    "stylelint-config-recommended": "^18.0.0",
    "stylelint-config-recommended-scss": "^17.0.0",
    "stylelint-config-standard": "^40.0.0",
    "stylelint-config-standard-scss": "^17.0.0",
    "stylelint-no-unsupported-browser-features": "^8.0.2",
    "stylelint-scss": "^7.0.0",
    "typescript": "^5.7.3",
    "vite": "npm:rolldown-vite@latest"
  },
  "workspaces": [
    "packages/*"
  ]
}
